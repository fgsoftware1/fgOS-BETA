ninja_required_version = 1.5

include rules.ninja

build help: HELP
build clean: CLEAN

build ./build/bin/boot.o: compile-asm ./src/boot.s
build ./build/bin/kernel.o: compile-c ./src/kernel.c
build ./isodir/boot/fgOS.bin: link ./build/bin/boot.o ./build/bin/kernel.o
build fgOS.iso: iso ./isodir

default ./build/bin/boot.o ./build/bin/kernel.o ./isodir/boot/fgOS.bin fgOS.iso
