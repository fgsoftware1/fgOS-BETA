ninja_required_version = 1.5

include rules.ninja

build help: HELP
build clean: CLEAN
#gcc
build ./bin/kernel.o: compile-c ./src/kernel.c
#as
build ./bin/boot.o: compile-asm ./src/header.asm
#ld
build ./build/fgOS.bin: link ./bin/boot.o ./bin/kernel.o
#iso
build ./build/fgOS.iso: iso ./build/fgOS.bin ./build/boot

default ./bin/kernel.o ./build/fgOS.bin ./build/fgOS.iso
